{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/components/**/*.tsx",
    "src/components/**/*.jsx",
    "src/components/**/*.js",
    "src/app/**/*.tsx",
    "src/app/**/*.jsx",
    "src/app/**/*.js",
    "src/store/**/*.ts",
    "src/store/**/*.js",
    "src/context/**/*.tsx",
    "src/context/**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
